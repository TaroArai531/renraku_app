<div class="form-signin">
  <h3 class="fw-bold mb-4">パスワード変更フォーム</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group mb-3">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "新しいパスワード  ※6文字以上" %>
    </div>

    <div class="form-group mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "新しいパスワード（再入力）" %>
    </div>

    <div class="actions pb-5">
      <%= f.submit "登録", class: "btn w-100 btn-lg btn-primary fw-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
