<div class="form-signin">
  <h3 class="fw-bold mb-4">パスワード変更</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.email_field :email, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "メールアドレス" %>
    </div>

    <div class="actions pb-5">
      <%= f.submit "リセットメールの送信", class: "btn w-100 btn-lg btn-primary fw-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
