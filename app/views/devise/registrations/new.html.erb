<div class="form-signin">
  <h1 class="ff-so mb-3">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.text_field :name, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "ユーザー名" %>
    </div>

    <div class="form-group mb-3">
      <%= f.email_field :email, class: "form-control col-md-5 col-sm", placeholder: "メールアドレス" %>
    </div>

    <div class="form-group mb-3">
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "パスワード  ※6文字以上" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-md-5 col-sm", placeholder: "パスワード（再入力）" %>
    </div>

    <div class="active pt-3 mb-5">
      <%= f.submit "Sign up", class: "btn w-100 btn-lg btn-primary fw-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
