<div class="form-signin">
  <h1 class="ff-so mb-3">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3">
      <%= f.text_field :login, autofocus: true, class: "form-control col-md-5 col-sm", placeholder: "メールアドレス または ユーザー名" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control col-md-5 col-sm", placeholder: "パスワード"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "checkbox mt-3" %>
      </div>
    <% end %>

    <div class="active pt-3 mb-5">
      <%= f.submit "Log in", class: "btn w-100 btn-lg btn-primary fw-bold" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
