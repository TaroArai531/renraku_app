 <header class="page-header">
  <nav class="navbar navbar-light">
    <div class="container">
      <a class="navbar-brand px-4" href="/">
        <%= image_tag "Logo.jpg", class: "rounded-circle border", style: "width: 75px; height: 75px;" %>
      </a>
      <% if user_signed_in? %>
        <ul class="nav justify-content-end">
          <li class="nav-item dropdown">
            <button class="btn" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <% if @user.picture.attached? %>
                <%= image_tag @user.picture.variant( resize: "75x75^", gravity: "center", crop: "75x75+0+0" ).processed, class: "rounded-circle" %>
              <% else %>
                <%= image_tag 'default_user_icon.png', class: "rounded-circle", style: "width: 75px; height: 75px;" %>
              <% end %>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1" style="position: absolute;right: 0;left: auto;">
              <% if @user.admin? %>
                <%= link_to "ユーザー管理", admin_users_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "プロフィール", "/users/:id", class: "dropdown-item" %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :get, class: "dropdown-item" %>
            </ul>
          </li>
        </ul>
      <% end %>
    </div>
  </nav>
</header>
