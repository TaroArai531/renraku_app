<div class="card bgc-none p-2">
  <% if @other.picture.attached? %>
    <%= image_tag @other.picture.variant( resize: "300x300^", gravity: "center", crop: "300x300+0+0" ).processed, class: "card-img-top mx-auto rounded-circle" %>
  <% else %>
    <%= image_tag 'default_user_icon.png', class: "card-img-top mx-auto rounded-circle" %>
  <% end %>
  <div class="card-body d-none d-md-block">
    <h4 class="card-title ff-so"><%= "#{@other.name}" %></h4>
    <p class="card-text">
      <span class="text-secondary border-bottom"><%= "#{@other.dob&.strftime("%Y年%m月%d日")}" %></span><br>
      <span class="text-secondary border-bottom"><%= "#{@other.sex}" %></span><br>
      <span class="text-secondary border-bottom"><%= "#{@other.bloodtype}" %></span>
    </p>
  </div>
</div>
